<div class="banner d-flex">
  <%= form_tag root_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search by name or city"
    %>
    <%= submit_tag "Search", class: "btn btn-info" %>
  <% end %>
</div>

<div class="container">
  <div class="row d-flex justify-content-center mt-2">
    <%= link_to 'See all products', root_path, class: 'btn btn-info' %>
  </div>
  <div class="row">
    <div class="cards">
      <div class = card-container>
        <% @products.each do |product| %>
          <div class="card-product">
            <i class="far fa-heart fav-prod" style="color: #DE7362;"></i>
            <%= image_tag "childbed.jpg" %>
              <div class="card-product-infos">
              <div>
                <h2><%= product.name %></h2>
                <h2 class="card-product-pricing"><%= product.price %> â‚¬ per day</h2>
              </div>
              <p><%= link_to 'See more', product_path(product), class: 'btn btn-primary' %></p>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-product-user avatar-bordered" />
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

