<div class="banner d-flex">
  <%= form_tag root_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search by name or city"
    %>
    <%= submit_tag "Search", class: "btn btn-info" %>
  <% end %>
</div>

<div class="container">
  <div class="row d-flex justify-content-center mt-2">
    <%= link_to 'See all products', root_path, class: 'btn btn-info' %>
  </div>
  <div class="card-container">
    <% @products.each do |product| %>
      <div class="card">
        <i class="far fa-heart fav-prod" style="color: #DE7362;"></i>
        <div class="imgBox">
          <%= image_tag product.photo %>
        </div>
        <div class="details">
          <div class="textContent">
            <h3><%= product.name %></h3>
            <h2 class="price"><%= product.price %> â‚¬/day</h2>
          </div>
          <p><%= link_to 'See more', product_path(product), class: 'btn btn-primary' %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

