<h1>Bookings#index</h1>

<ul>
  <% @bookings.each do |booking| %>
    <li>
      <div><%= booking.product.name %></div>
      <div><%= booking.product.description %></div>
      <div><%= booking.product.city %></div>

      <!-- Elements pour le price per day -->
      <% booking.duration = (booking.end_date - booking.start_date).to_i %>
      <% booking.price = booking.product.price * booking.duration %>

      <div><%= booking.product.price %> € for <%= booking.duration %> days</div>
      <div>Total: <%= booking.price %> €</div>
      <%= link_to 'Cancel booking', booking_path(booking), method: :delete, class: 'btn btn-primary' %>
    </li>
  <% end %>
</ul>
